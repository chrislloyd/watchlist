<header class="condensed">
	<ul>
		<li class="logout"><%= link_to "", new_user_session_path, :class => "logout" %></li>
	</ul>
</header>

<div id="container" class="relative">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "textfield" %>

  <%= f.password_field :password, :placeholder => "Password", :class => "textfield" %>

  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "textfield" %>

  <%= f.submit "Sign up", :class => "submit" %>

<% end %>

</div>