<header class="condensed">
	<ul>
		<li class="logout"><%= link_to "Sign up", new_registration_path(resource_name), :class => "" %></li>
	</ul>
</header>

<div id="container" class="relative">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "textfield" %>

  <%= f.password_field :password, :placeholder => "Password", :class => "textfield" %>

  <%= f.submit "Sign in", :class => "submit" %>

  <%= f.hidden_field :remember_me, :as => :hidden, :value => true %>

<% end %>

</div>
